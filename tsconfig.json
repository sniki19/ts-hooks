{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6",
    ],
    "module": "CommonJS",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/jest"
  ]
}